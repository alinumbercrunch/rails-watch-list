<div class="container mt-3">
  <div class="d-flex justify-content-between align-items-center">
    <h1>Lists</h1>
    <%= link_to new_list_path, class: 'text-dark text-decoration-none' do %>
      <i class="fa-solid fa-plus"></i>
    <% end %>
  </div>
  <div class="cards">
    <% @lists.each do |list| %>
      <div class="card mb-3">
        <div class="card-body">
          <h5 class="card-title"><%= list.name %></h5>
          <%= link_to 'Go to list', list_path(list), class: 'btn btn-primary' %>
        </div>
      </div>
    <% end %>
  </div>
</div>
