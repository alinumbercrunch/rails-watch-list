<div class="container mt-3">
  <h1><%= @list.name %></h1>
  <%= link_to 'Lists', lists_path, class: 'btn btn-info mt-2' %>
  <%= link_to 'Create a bookmark', new_list_bookmark_path(@list), class: 'btn btn-info mt-2' %>

  <div class="row mt-4">
    <% @list.movies.each do |movie| %>
      <div class="col-md-4 mb-3">
        <div class="card h-100">
          <img src="<%= movie.poster_url %>" class="card-img-top" alt="<%= movie.title %> poster">
          <div class="card-body">
            <h5 class="card-title"><%= movie.title %></h5>
            <p class="card-text"><%= movie.overview %></p>
            <p class="card-text"><strong>Rating:</strong> <%= movie.rating %></p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
